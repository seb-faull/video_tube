<h1>Edit Form</h1>

<form action="/videos/<%= @video.id %>" method="POST">
	
	<label for="title"> Title: </label>
	<input type="text" name="title" value="<%= @video.title %>">

	<label for="description"></label>
	<textarea name="description"> <%= @video.description %> </textarea>

	<label for="url"></label>
	<textarea name="url"> <%= @video.url %> </textarea>

	<label for="genre"></label>
	<textarea name="url"> <%= @video.genre %> </textarea>

	<input type="hidden" name="_method" value="PUT">

	<input type="submit" value="Update">

</form>